import random
import customtkinter as ctk


ctk.set_appearance_mode("dark")
ctk.set_default_color_theme("blue")

root = ctk.CTk()
root.title("Password Generator")
root.geometry("400x350")

lowercase = "abcdefghijklmnopqrstuvwxyz"
uppercase = "ABCDEFGHIJKLMNOPQRSTUVWXYZ"
digits = "0123456789"
special_characters = "!@#$%^&*()_+-=[]{}|;:,.<>?/~`"

# --- Functions ---
def generate_password():
    try:
        length = int(length_entry.get())
        if length <= 0:
            result_label.configure(text="Enter a valid length.")
            return

        all_characters = lowercase + uppercase + digits
        if special_var.get() == 1:
            all_characters += special_characters

        password = "".join(random.choice(all_characters) for _ in range(length))
        password_output.delete(0, "end")
        password_output.insert(0, password)

    except ValueError:
        result_label.configure(text="Length must be a number.")

# --- UI Elements ---
title_label = ctk.CTkLabel(root, text="Password Generator", font=("Arial", 20))
title_label.pack(pady=15)

length_label = ctk.CTkLabel(root, text="Password Length:")
length_label.pack()

length_entry = ctk.CTkEntry(root)
length_entry.pack(pady=5)

special_var = ctk.IntVar()
special_checkbox = ctk.CTkCheckBox(root, text="Include Special Characters", variable=special_var)
special_checkbox.pack(pady=10)

generate_button = ctk.CTkButton(root, text="Generate Password", command=generate_password)
generate_button.pack(pady=10)

password_output = ctk.CTkEntry(root, width=250)
password_output.pack(pady=10)

result_label = ctk.CTkLabel(root, text="")
result_label.pack(pady=5)

root.mainloop()
